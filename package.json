{
  "name": "typengquest",
  "version": "0.1.0",
  "main": "dist/index.js",
  "bin": {
    "typengquest": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:test": "tsx src/index.ts --test-mode",
    "start": "node dist/index.js",
    "watch": "nodemon --exec tsx src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "pretest": "npm run format && npm run lint:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check": "npm run format && npm run lint && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A typing-based CLI RPG game where players explore virtual file systems",
  "dependencies": {
    "@types/node": "^24.0.4",
    "blessed": "^0.1.81",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "figlet": "^1.8.1",
    "inquirer": "^12.6.3",
    "lowdb": "^7.0.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^30.0.3",
    "prettier": "^3.6.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-mcp": "^0.0.14"
  }
}
